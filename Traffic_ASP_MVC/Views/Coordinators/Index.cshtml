@model cloudscribe.Pagination.Models.PagedResult<Coordinators>

@{
    ViewData["Title"] = "Index";
}

<h1>Coordinators</h1>

<div>
    <a class="btn btn-primary mt-1" asp-controller="Carriers" asp-action="Create">Create</a>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <table id="coordinator" class="table table-bordered table-striped w-auto">
            <thead>
                <tr>
                    <th>Coordinator Name</th>
                    <th>Action Buttons</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Data) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoordinatorName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>


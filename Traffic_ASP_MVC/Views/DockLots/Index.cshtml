@model cloudscribe.Pagination.Models.PagedResult<DockLot>

@{
    ViewData["Title"] = "Dock / Lot";
}
@if (TempData["AlertMessage"] != null)
{
    <div id="alert" class="alert alert-success position-relative">
        <div id="close" class="position-absolute fixed-top">X</div>
        <strong>Success !</strong> @TempData["AlertMessage"]
    </div>
}
<div class="sticky-top titleFixed pb-1">
    <div class="container">
        <h1>Dock / Lot</h1>
        <div class="row">
            <div class="col-md-3">
                              
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Status</label>
                    <select id="trailerStatus" class="form-control">
                        <option value="">Select Status</option>
                        <option value="Empty">Empty</option>
                        <option value="Full/InComp">Full/InComp</option>
                        <option value="Full/InFinished">Full/InFinished</option>
                        <option value="Full/InMixed">Full/InMixed</option>
                        <option value="Full/OutComp">Full/OutComp</option>
                        <option value="Full/OutFinished">Full/OutFinished</option>
                        <option value="Full/OutMixed">Full/OutMixed</option>
                        <option value="Reserved">Reserved</option>
                        <option value="Rejected">Rejected</option>
                        <option value="Shuttle">Shuttle</option>
                        <option value="Load In Process">Load In Process</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                        <label class="control-label">Dimension</label>
                        <select id="trailerSize" class="form-control">
                            <option value="">Select Dimension</option>
                            <option value="20-LC">20-LC</option>
                            <option value="40-HC">40-HC</option>
                            <option value="40-ST">40-ST</option>
                            <option value="45-FT">45-FT</option>
                            <option value="48-FT">48-FT</option>
                            <option value="53-FT">53-FT</option>
                            <option value="PUP">PUP</option>
                        </select>
                        <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid table-responsive">
    <table id="docklot" class="table table-bordered table-striped w-auto">
        <thead>
            <tr>
                <th><p>Action Buttons</p></th>
                <th><p>Location</p></th>
                <th><p>Carrier Name</p></th>
                <th><p>Trailer Status</p></th>
                <th><p>Trailer Number</p></th>
                <th><p>Dimension</p></th>
                <th><p>Trailer Comments</p></th>
                <th><p>Load Number</p></th>
                <th><p>MBOL Number</p></th>
                <th><p>Created</p></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Data) {
            <tr>
                <td>
                        @if (item.Location == "Exit")
                        {
                            <div></div>   
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>    
                        }                    
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarrierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrailerNbr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dimension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoadNbr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MbolNbr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

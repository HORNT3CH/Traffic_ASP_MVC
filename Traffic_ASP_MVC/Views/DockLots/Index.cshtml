@model cloudscribe.Pagination.Models.PagedResult<DockLot>

@{
    ViewData["Title"] = "Dock / Lot";
}

<h1>Dock / Lot</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table id="docklot" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><h4>Location</h4></th>
            <th><h4>Carrier Name</h4></th>
            <th><h4>Status</h4></th>
            <th><h4>Trailer Number</h4></th>
            <th><h4>Dimension</h4></th>
            <th><h4>Comments</h4></th>
            <th><h4>Load Number</h4></th>
            <th><h4>MBOL #</h4></th>
            <th><h4>Time Stamp</h4></th>
            <th><h4>Actions</h4></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carrierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trailerNbr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dimension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loadNbr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mbolNbr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeStamp)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a>
@*                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>


@model cloudscribe.Pagination.Models.PagedResult<Carriers>

@{
    ViewData["Title"] = "Carriers";
}
<div class="sticky-top titleFixed pb-1">
    <h1>Carriers</h1>

    <p>
        <a class="btn btn-primary mt-1" asp-controller="Carriers" asp-action="Create">Create</a>
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <table id="carrier" class="table table-bordered table-striped w-auto">
            <thead>
                <tr>
                    <th>Carrier Name</th>
                    <th>Action Buttons</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Data) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarrierName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

